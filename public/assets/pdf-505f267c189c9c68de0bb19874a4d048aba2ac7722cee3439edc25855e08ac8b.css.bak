.col-wrapper {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    margin-top: none;
    margin-bottom: none;
}

.col-2 {
    padding-left: 2px;
    float: right;
    width: 49%;
}

.col-3 {
    padding-left: 2px;
    float: right;
    width: 33%;
}

.col-4 {
    padding-left: 2px;
    float: right;
    width: 24%;
}

/* line hight*/
.one-line {
  height: 25px;
}   

.two-lines {
  height: 50px;
} 

.three-lines {
  height: 75px;
}

.four-lines {
  height: 100px;
}

/* english */
.english {
  direction:LTR !important;
  text-align: left !important;
  font-size: 12px;
}
