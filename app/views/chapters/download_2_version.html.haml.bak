.col-wrapper
  .col-2{:class => is_english(@versions[0])}
    .title
      = display_book_chapter(@chapter.book, @chapter.order, @versions[0])  
    - @chapter.sentences.each do |sentence|
      .sentence{:class => calculate_sentence_height_download_2_version(sentence)}
        #{sentence.order.to_s}. #{sentence[@versions[0].to_sym]}
  .col-2{:class => is_english(@versions[1])}
    .title
      = display_book_chapter(@chapter.book, @chapter.order, @versions[1])  
    - @chapter.sentences.each do |sentence|
      .sentence{:class => calculate_sentence_height_download_2_version(sentence)}
        #{sentence.order.to_s}. #{sentence[@versions[1].to_sym]}
