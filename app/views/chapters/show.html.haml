= render 'shared/header', :chapters => true          
.content-box
  .chapter-header.pull-right
    .row
      .col-md-4.pull-right
        = form_tag select_chapter_path, method: :get, class: "form-horizontal form-horizontal-chapter" do
          .row
            .col-md-7.col-sm-7{:class => pull_left_or_right()}
              .row
                .col-md-3.col-sm-3{:class => pull_left_or_right()}
                  = t :choose_book
                .col-md-9.col-sm-9{:class => pull_left_or_right()}
                  = select_tag 'choosen_book', options_for_select([["#{t :genesis}", 'genesis'], ["#{t :exodus}",'exodus'] ], @chapter.book), class: 'select-btn'
            .col-md-5.col-sm-4{:class => pull_left_or_right()}
              .row 
                - if session[:locale] != 'en'             
                  .col-md-4.col-sm-6{:class => pull_left_or_right()}
                    = t :choose_chapter
                  .col-md-8.col-sm-6{:class => pull_left_or_right()}
                    = render partial: '/chapters/chapter_select', locals: {book: @chapter.book, chapter: @chapter.order}
                - else
                  .col-md-6.col-sm-6{:class => pull_left_or_right()}
                    = t :choose_chapter
                  .col-md-6.col-sm-6{:class => pull_left_or_right()}
                    = render partial: '/chapters/chapter_select', locals: {book: @chapter.book, chapter: @chapter.order}
        .visible-xs
          %br                      
      .col-md-8.pull-right
        = form_tag select_chapter_path, method: :get, class: "form-horizontal form-horizontal-chapter" do
          .row
            .col-md-1.col-sm-2{:class => pull_left_or_right()}
              = t :choose_portion
            .col-md-11.col-sm-10{:class => pull_left_or_right()}
              = select_tag 'choosen_portion', options_for_select([["#{t :porsion_1}", 'genesis'], ["#{t :porsion_2}",'exodus'] ], @chapter.book), class: 'select-btn' 
  %br
  .row.chapters
    .col-sm-4.col-md-4.pull-right
      %br
      %ul.nav.navbar-nav.next-prev-btn-group.hidden-xs
        %li
          = link_to chapter_path(@chapter.next) do  
            = t :next_chapter 
            %i.fa.fa-arrow-left       
        %li
          = link_to chapter_path(@chapter.prev) do
            %i.fa.fa-arrow-right
            = t :prev_chapter                         
      %br
      %br
      .visible-sm
        %br
      .small-title
        الترجمة من أسفار موسى الخمسة وفقا ل
        %spen
          = link_to 'كمان', 'http://unbound.biola.edu', target: :_blank      
      .title
        .row
          .col-md-6.pull-right
            #{display_book_name(@chapter.book, 'arabic')} - نور #{@chapter.order}
          .col-md-6.pull-right
            .audio
              - if false
                //%audio{:controls => "", :src => @chapter.audio_arabic, :type => "audio/mpeg"}
                %audio{:controls => "", :src => "/assets/audio/Maya - Are U with me.mp3", :type => "audio/mpeg"}
                  Your browser does not support the audio element.
      - @chapter.ordered_sentences.each do |sentence|
        .sentence{:class => calculate_sentence_height(sentence)}
          #{sentence.order.to_s}. #{sentence.arabic}
      %ul.nav.navbar-nav.next-prev-btn-group.hidden-xs
        %li
          = link_to chapter_path(@chapter.next) do  
            = t :next_chapter 
            %i.fa.fa-arrow-left       
        %li
          = link_to chapter_path(@chapter.prev) do
            %i.fa.fa-arrow-right
            = t :prev_chapter        
    .col-sm-4.col-md-4.pull-right
      .hidden-xs
        %br
        %br
        %br
        .visible-sm
          %br      
      .small-title
        מחמש חומשי תורה אשר מיוחסים למשה - בעברית המקורית 
      .title
        .row
          .col-md-8.pull-right
            #{display_book_name(@chapter.book, 'hebrow')} - פרק #{@chapter.order}
          .col-md-4.pull-right
            .audio
              = link_to @chapter.audio_hebrow, target: '_blank' do
                %i.fa.fa-volume-up          
              - if false
                //%audio{:controls => "", :src => @chapter.audio_arabic, :type => "audio/mpeg"}
                %audio{:controls => "", :src => "/assets/audio/Maya - Are U with me.mp3", :type => "audio/mpeg"}
                  Your browser does not support the audio element.
      - @chapter.ordered_sentences.each do |sentence|
        .sentence{:class => calculate_sentence_height(sentence)}
          #{sentence.order.to_s}. #{sentence.hebrow}    
    .col-sm-4.col-md-4.pull-right
      / Tabs Starts
      .tabs-panel
        / Nav Tabs Starts
        %ul.nav.nav-tabs{:class => nav_tabs_english?()}
          %li.active
            %a{:href => "#tab-english", "data-toggle" => "tab"} 
              = t :english        
          %li
            %a{:href => "#tab-aramic", "data-toggle" => "tab"} 
              = t :aramic         
          %li
            %a{:href => "#tab-interpretation", "data-toggle" => "tab"} 
              = t :commentary
        / Nav Tabs Ends
        / Tab Content Starts
        .tab-content.clearfix
          / English Starts
          #tab-english.tab-pane.active
            .text-paddind-english
            .small-title-english.english
              Translation from the Five books of Moses according to: 
              %span 
                = link_to 'Mechon Mamre','http://www.mechon-mamre.org/', target: :_blank 
            .title.english
              #{display_book_name(@chapter.book, 'english')} - Chapter #{@chapter.order}            
            .english.small-font
              - @chapter.ordered_sentences.each do |sentence|
                .sentence{:class => calculate_sentence_height(sentence)}
                  #{sentence.order.to_s}. #{sentence.english}
          / English Ends        
          / Aramic Starts
          #tab-aramic.tab-pane
            .text-paddind
            .small-title
              מחמש חומשי תורה אשר מיוחסים למשה - בעברית המקורית 
            .title
              #{display_book_name(@chapter.book, 'hebrow')} - פרק #{@chapter.order}
            - @chapter.ordered_sentences.each do |sentence|
              .sentence{:class => calculate_sentence_height(sentence)}
                #{sentence.order.to_s}. #{sentence.aramic}          
          / Aramic End           
          / Interpretation start
          #tab-interpretation.tab-pane
            .audio
            = @chapter.meaning
          / Interpretation End
        / Tab Content Ends
      / Tabs Ends           
  .pull-left
    .btn-group
      = link_to  set_download_variables_chapter_path(@chapter), remote: true, class: 'download-btn' do
        = t :download_version
  %br
  %br
%br     